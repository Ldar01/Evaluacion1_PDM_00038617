        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_linear"
            android:padding="@dimen/padding_linear"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/name_prod_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/producto_9"/>
            <TextView
                android:id="@+id/prod_9_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_usuario"/>

    <TextView
        android:id="@+id/username_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_escribe_el_usuario_aqui"/>

    <TextView
        android:id="@+id/correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_correo_electronico"/>

    <TextView
        android:id="@+id/correo_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_escribe_el_usuario_aqui"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/button_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_enviar"/>

</LinearLayout>